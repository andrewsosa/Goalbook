<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.andrewsosa.goalbook" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".Goalbook"
        android:allowBackup="true"
        android:icon="@drawable/goalbook_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name="com.andrewsosa.goalbook.DispatchActivity"
            android:label="@string/title_activity_dispatch" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.andrewsosa.goalbook.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:theme="@style/AppTheme.SettingsActivity" >
        </activity>
        <activity
            android:name="com.andrewsosa.goalbook.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme" >
        </activity>
        <activity android:name=".GoalActivity"
            android:theme="@style/AppTheme.ItemView">
        </activity>
    </application>

</manifest>
