<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- NEVER MODIFY THESE, CHANGE THE COLORS FILE -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/background</item>

        <!-- Enable dialog stuff -->
        <item name="android:dialogTheme">@style/AppTheme.DialogTheme</item>

        <!-- Window stuff -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>


    </style>



    <!-- Style for login activity -->
    <style name="AppTheme.Login" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Window stuff -->
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:statusBarColor">@color/primary</item>
    </style>

    <!-- Style for the Item View children activities -->
    <style name="AppTheme.ItemView" parent="AppTheme">
        <item name="android:dialogTheme">@style/AppTheme.DialogTheme</item>
        <item name="android:statusBarColor">@color/primaryDark</item>
    </style>


    <style name="AppTheme.SettingsActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:textColor">@color/primaryTextDark</item>
    </style>




</resources>
