<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- NEVER MODIFY THESE, CHANGE THE COLORS FILE -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDarkv21</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/background</item>

        <!-- Enable dialog stuff -->
        <item name="android:dialogTheme">@style/AppTheme.DialogTheme</item>

        <!-- Window stuff -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>


    </style>

    <style name="AppTheme.ItemView">
        <item name="colorPrimary">@color/indigo_400</item>
        <item name="colorPrimaryDark">@color/indigo_500</item>
        <item name="colorAccent">@color/teal_A700</item>
        <item name="android:statusBarColor">?attr/colorPrimaryDark</item>
    </style>


    <!-- Style for login activity -->
    <style name="AppTheme.Login">
        <item name="android:statusBarColor">@color/primary</item>
    </style>


    <style name="AppTheme.SettingsActivity">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:textColor">@color/primaryTextDark</item>
    </style>




</resources>
