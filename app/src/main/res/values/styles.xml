<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- NEVER MODIFY THESE, CHANGE THE COLORS FILE -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/background</item>

        <!-- Enable dialog stuff -->
        <item name="android:dialogTheme">@style/AppTheme.DialogTheme</item>

    </style>

    <!-- Styles for main pop-up dialogs -->
    <style name="AppTheme.DialogTheme">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
    </style>


    <style name="AppTheme.ItemView">
        <item name="android:dialogTheme">@style/AppTheme.DialogTheme</item>
    </style>

    <style name="AppTheme.ItemView.Toolbar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="android:textColorPrimary">@color/primaryTextLight</item>
        <item name="android:textColorSecondary">@color/primaryTextLight</item>
    </style>

