<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- NEVER MODIFY THESE, CHANGE THE COLORS FILE -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/background</item>

        <!-- Enable dialog stuff -->
        <item name="android:dialogTheme">@style/AppTheme.DialogTheme</item>

    </style>

    <!-- Styles for main pop-up dialogs -->
    <style name="AppTheme.DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
    </style>


    <style name="AppTheme.ItemView" parent="AppTheme">
        <item name="android:dialogTheme">@style/AppTheme.DialogTheme</item>
    </style>

    <style name="AppTheme.Tabs" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/AppTheme.Tabs.Text</item>
        <item name="tabSelectedTextColor">@color/primaryTextLight</item>
        <item name="tabIndicatorColor">@color/primaryTextLight</item>
        <item name="tabPaddingStart">24dp</item>
        <item name="tabPaddingEnd">24dp</item>
    </style>

    <style name="AppTheme.Tabs.Text" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/primaryTextLight</item>
    </style>

    <style name="ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="android:textColorPrimary">@color/primaryTextLight</item>
        <item name="android:textColorSecondary">@color/primaryTextLight</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



</resources>
