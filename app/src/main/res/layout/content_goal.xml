<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GoalActivity"
    tools:showIn="@layout/activity_goal"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@color/background"
    android:orientation="vertical"
    android:divider="@drawable/linear_layout_divider"
    android:showDividers="middle|end">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Goal Achived"
            android:id="@+id/textView"
            android:textSize="16sp"
            android:textColor="@color/primaryTextDark"
            android:layout_weight="1" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox2"
            android:checked="false"
            android:gravity="right" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Priority"
            android:id="@+id/textView17"
            android:textSize="16sp"
            android:textColor="@color/primaryTextDark" />

        <TextView
            android:layout_width="144dp"
            android:layout_height="40dp"
            android:text="Daily"
            android:id="@+id/textView18"
            android:textSize="16sp"
            android:textColor="@color/secondaryTextDark"
            android:paddingLeft="16dp"
            android:gravity="center_vertical|end"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/imageView"
            android:layout_marginLeft="8dp"
            android:src="@drawable/ic_arrow_drop_down_24dp"
            android:tint="@color/grey_600" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingRight="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Info"
            android:id="@+id/textView5"
            android:textSize="14sp"
            android:textColor="@color/secondaryTextDark"
            android:fontFamily="sans-serif-medium"
            android:layout_weight="1"
            android:paddingLeft="16dp"
            android:gravity="center_vertical" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="144dp"
                android:layout_height="40dp"
                android:text="Created On"
                android:id="@+id/textView2"
                android:textSize="16sp"
                android:textColor="@color/primaryTextDark"
                android:paddingLeft="16dp"
                android:gravity="center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Jan 01, 2015"
                android:id="@+id/textView3"
                android:textSize="16sp"
                android:textColor="@color/secondaryTextDark"
                android:paddingLeft="16dp"
                android:gravity="center_vertical|end"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="144dp"
                android:layout_height="40dp"
                android:text="Accomplished"
                android:id="@+id/textView4"
                android:textSize="16sp"
                android:textColor="@color/primaryTextDark"
                android:paddingLeft="16dp"
                android:gravity="center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Unfinished"
                android:id="@+id/textView16"
                android:textSize="16sp"
                android:textColor="@color/secondaryTextDark"
                android:paddingLeft="16dp"
                android:gravity="center_vertical|end"
                android:layout_weight="1" />
        </LinearLayout>

