<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="72dp"
        android:clickable="true"
        android:id="@+id/time_layout"
        android:layout_marginRight="72dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unspecified"
            android:id="@+id/timeText"
            android:layout_marginLeft="72dp"
            android:layout_marginRight="72dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="18dp"
            android:textColor="@color/primaryTextDark"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/ic_schedule_24dp"
            android:tint="@color/grey_600"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time"
            android:id="@+id/textView3"
            android:layout_marginLeft="72dp"
            android:textSize="14sp"
            android:layout_below="@+id/timeText" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="72dp"
        android:clickable="true"
        android:id="@+id/list_layout"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unassigned"
            android:id="@+id/listText"
            android:layout_marginLeft="72dp"
            android:layout_marginRight="72dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="18dp"
            android:textColor="@color/primaryTextDark"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="List"
            android:id="@+id/textView5"
            android:textSize="14sp"
            android:layout_below="@+id/listText"
            android:layout_alignLeft="@+id/listText"
            android:layout_alignStart="@+id/listText" />
    </RelativeLayout>

</LinearLayout>