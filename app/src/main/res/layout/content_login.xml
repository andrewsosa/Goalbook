<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    tools:context="com.andrewsosa.bounce.LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- TODO MIGRATE VALUES TO XML FOR LANDSCAPE SUPPORT -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="570dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp">



                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="@color/primary"
                        android:gravity="center_vertical|center_horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BOUNCE"
                            android:id="@+id/decoy"
                            android:textColor="@color/primaryTextLight"
                            android:fontFamily="sans-serif-medium"
                            android:textSize="34sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TO-DO"
                            android:id="@+id/textView17"
                            android:textColor="@color/primaryTextLight"
                            android:textSize="34sp"
                            android:focusableInTouchMode="false"
                            android:fontFamily="sans-serif-light"
                            android:layout_marginLeft="8dp" />

                    </LinearLayout>

                    <android.support.v7.widget.Toolbar
                        android:layout_width="fill_parent"
                        android:layout_height="56dp"
                        android:id="@+id/toolbar" />

                </RelativeLayout>



                <RelativeLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/background"
                    android:elevation="4dp">

                    <RelativeLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="270dp"
                        android:paddingLeft="24dp"
                        android:paddingRight="24dp"
                        android:paddingTop="30dp"
                        android:paddingBottom="20dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="0dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="0dp">

                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/username"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:hint="Email address"
                            android:inputType="textEmailAddress"
                            android:layout_marginBottom="16dp"
                            app:met_baseColor="@color/primaryTextDark"
                            app:met_floatingLabel="normal"
                            app:met_primaryColor="@color/accent"
                            />

                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPassword"
                            android:id="@+id/password"
                            android:hint="Password"
                            android:fontFamily="sans-serif"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="false"
                            android:layout_below="@+id/username"
                            android:layout_marginBottom="42dp"
                            app:met_baseColor="@color/secondaryTextDark"
                            app:met_floatingLabel="normal"
                            app:met_primaryColor="@color/accent"/>

                    </RelativeLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="72dp"
                        android:layout_alignParentEnd="false"
                        android:layout_alignParentBottom="true"
                        android:gravity="center_horizontal|bottom"
                        android:visibility="visible"
                        android:animateLayoutChanges="true"
                        android:layout_weight="1"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="false">

                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:text="New User"
                            android:id="@+id/new_user"
                            android:textColor="@color/secondaryTextDark"
                            android:visibility="visible"
                            android:textSize="16sp"
                            android:layout_weight="1"
                            android:background="@color/grey_300" />

                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:text="Sign In"
                            android:id="@+id/sign_in"
                            android:background="@color/accent"
                            android:textColor="@color/primaryTextLight"
                            android:layout_alignParentRight="true"
                            android:layout_alignBaseline="@+id/textView"
                            android:layout_alignParentBottom="true"
                            android:textSize="16sp"
                            android:layout_weight="1" />

                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>
        </FrameLayout>
    </ScrollView>


</LinearLayout>