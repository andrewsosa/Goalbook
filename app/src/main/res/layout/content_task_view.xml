<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.andrewsosa.bounce.TaskViewActivity">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/content_task_view_header"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:id="@+id/content_header" />

        <include layout="@layout/content_task_view_body"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/content_header" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/edit_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_done_grey600_24dp"
            android:layout_alignParentBottom="false"
            android:layout_alignParentEnd="true"
            app:elevation="12dp"
            app:borderWidth="0dp"
            android:layout_marginRight="@dimen/fab_margin"
            android:layout_marginBottom="-28dp"
            android:layout_alignBottom="@+id/content_header" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/edit_fab_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_done_white_24dp"
            android:layout_alignParentBottom="false"
            android:layout_alignParentEnd="true"
            app:elevation="12dp"
            app:borderWidth="0dp"
            android:tint="@color/green_500"
            android:layout_marginRight="@dimen/fab_margin"
            android:layout_marginBottom="-28dp"
            android:layout_alignBottom="@+id/content_header"
            android:visibility="invisible"
            android:clickable="false" />
    </RelativeLayout>

</RelativeLayout>

